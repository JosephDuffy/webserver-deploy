[
  {
    "id": "update-website",
    "execute-command": "/etc/webhook/update-josephduffy.co.uk/update.sh",
    "command-working-directory": "/etc/webhook/",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "trigger-rule":
    {
      "and":
      [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "{{ getenv "WEBSITE_DEPLOY_SECRET" | js }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  }
]