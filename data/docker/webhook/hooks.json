[
  {
    "id": "update-container",
    "execute-command": "/etc/webhook/update-container.sh",
    "command-working-directory": "/data/docker",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "package.name"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "{{ getenv "UPDATE_CONTAINER_SECRET" | js }}",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
        },
        {
          "or": [
            {
              "match": {
                "type": "value",
                "secret": "josephduffy-co-uk",
                "parameter": {
                  "source": "payload",
                  "name": "registry_package.name"
                }
              }
            },
            {
              "match": {
                "type": "value",
                "secret": "contact-josephduffy-co-uk",
                "parameter": {
                  "source": "payload",
                  "name": "registry_package.name"
                }
              }
            }
          ]
        }
      ]
    }
  }
]
